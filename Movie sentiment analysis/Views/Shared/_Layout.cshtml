<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie Sentiment Analysis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Navbar */
        .navbar {
            background-color: #212529;
        }
        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 600;
        }

        /* Header and Form */
        .header-title {
            margin-top: 3rem;
            text-align: center;
            font-size: 2.5rem;
            color: #343a40;
        }

        .container {
            max-width: 750px;
            margin-top: 3rem;
        }

        /* Card Design */
        .card {
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            border: none;
        }

        .card-body {
            padding: 2.5rem;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #495057;
            margin-bottom: 1.5rem;
        }

        /* Input */
        .form-control {
            height: 150px;
            font-size: 1.1rem;
            border-radius: 10px;
            padding: 1rem;
        }

        /* Submit Button */
        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
            border-radius: 50px;
            transition: background-color 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }

        /* Result Box */
        .result-box {
            margin-top: 2rem;
            text-align: center;
            font-size: 1.25rem;
            padding: 1.5rem;
            border-radius: 10px;
            background-color: #f8f9fa;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .alert {
            font-size: 1.25rem;
            padding: 1.25rem;
            margin-top: 1rem;
        }

        /* Footer */
        footer {
            margin-top: 4rem;
            padding: 1.5rem 0;
            background-color: #212529;
            color: white;
        }
        .footer-content {
            text-align: center;
            font-size: 1rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Movie Sentiment Analysis</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="header-title">Analyze Movie Review Sentiment</div>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Enter your movie review</h5>
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top footer">
        <div class="footer-content">
            &copy; 2024 - Movie Sentiment Analysis
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
